{{>partials/header}}
        <main>
            <div>

                <div class="bg-[url('/images/{{banner.background}}.jpg')] bg-cover bg-center w-auto h-60 flex justify-center
                items-center">
                {{#banner}}
                    <h2 class="text-white text-3xl font-bold text-shadow-lg/50 h-auto">{{title}}</h2>
                {{/banner}}
                </div>

                <div>
                    <h2 class="text-center my-6 text-blue-900 text-[18px] font-bold">{{banner.title}} disponiveis para adocao</h2>
                    <div class="grid grid-cols-2 m-auto lg:grid-cols-4">
                        <div class="px-2">
                            {{#lista}}
                            <img class="rounded" src="images/{{image}}" alt="Imagem de um pastor alemao">
                            <h3 class="font-bold mt-2">{{name}}</h3>
                            <p class="text-[15px]">Cor: {{color}}</p>
                            <p class="text-[15px]">Cor: Branco</p>
                            {{/lista}}

                            {{^lista}}
                                <h2 class="text-center my-6 text-blue-900 text-[18px] font-bold">Não há resultado</h2>
                            {{/lista}}
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>
</body>
</html>